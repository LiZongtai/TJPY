<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/order_out"
            android:textColor="#4b0082"
            android:textSize="25sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/border_out"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/image"
                android:src="@mipmap/basketball" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="@string/order1" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="@string/renttitle1" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/timesurplus" />
                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:background="@drawable/border"
                    android:text="@string/pubkey" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:text="@string/space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/border_out"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/image"
                android:src="@mipmap/bike"
                app:srcCompat="@mipmap/bike" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="@drawable/border"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="@string/order2" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="@string/renttitle3" />
                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/timesurplus2" />
                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:background="@drawable/border"
                    android:text="@string/pubkey2" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>