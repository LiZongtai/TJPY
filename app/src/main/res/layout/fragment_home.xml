<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_out"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/border"
                    android:contentDescription="@string/image"
                    app:srcCompat="@mipmap/basketball" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/renttitle1" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/credit_best" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/price1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_out"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/border"
                    android:contentDescription="@string/image"
                    app:srcCompat="@mipmap/computer" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/renttitle2" />
                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/credit_good" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/price2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_out"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/border"
                    android:contentDescription="@string/image"
                    app:srcCompat="@mipmap/bike" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/renttitle3" />
                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/credit_best" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/price3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_out"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/border"
                    android:contentDescription="@string/image"
                    app:srcCompat="@mipmap/book" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/renttitle4" />
                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_best" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textColor="#000000"
                    android:background="@drawable/border"
                    android:text="@string/price4" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_out"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/border"
                    android:contentDescription="@string/image"
                    android:src="@android:drawable/ic_menu_gallery" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/renttitle" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/price" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_out"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/border"
                    android:contentDescription="@string/image"
                    android:src="@android:drawable/ic_menu_gallery" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:text="@string/renttitle" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textColor="#000000"
                    android:background="@drawable/border"
                    android:text="@string/price" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>